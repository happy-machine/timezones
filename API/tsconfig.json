{
  "compilerOptions": {
    "downlevelIteration": true,
    "rootDir": "src",
    "outDir": "dist",
    "typeRoots": [
      "./@types",
      "./node_modules/@types"
    ],
    "lib": [
      "dom",
      "es2018"
    ],
    "esModuleInterop": true
  },
  "includes": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist/**/*"
  ]
}

